{
	"manifest_version": 2,
	"name": "chessbuddy",
	"description": "A plugin for improved personalized chess improvement",
	"version": "0.0.1",
	"icons": {
		"64": "icons/icon.png"
	},
    "permissions" :
    [
        "webRequest",
        "*://*.chess.com/callback/tactics/learning/next",
        "*://*.chess.com/callback/tactics/themeTraining/submitMoves"
    ],

	"background": {
		"scripts": [
            "debug.js",
            "messages.js",
            "message_recv.js",
			"background_script.js"
		]
	},

	"content_scripts": [
		{
			"matches": [
				"*://*.chess.com/puzzles*"
			],
			"js": [
				"debug.js",
				"messages.js",
				"message_send.js",
				"content_script.js"
			]
		}
	]
}
